<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

<div class="content shadow" id="login-box">
    <h2>Homework Library -- Work In Progress</h2>

	<label for="homework-name" class="homework-library-search">
		<div class="option-title">Search for Preset</div>
		<div class="option-alt">Input the Preset title or any related information</div>
	</label>

	<form action="/homework/library/search" method="GET">
	<input type="text" name="input">
	<input type="submit" class="btn btn-primary" value="search">
	</form>

	<div class="homework-library-results">
		<div class="homework-library-preview homework-library-border">
			<div class="homework-library-panel-header">
				Preview
			</div>
			<div class="homework-library-panel-container">
				{% for key, value in results %}
					<div 
						class="homework-library-panel-card homework-library-border"
						data-index={{ key }}
					>
						{{ value }}
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="homework-library-detail">
			<div class="homework-library-panel-header homework-library-border">
				Detail
			</div>
			<div class="homework-library-panel-container">
				<div class="homework-library-panel-content homework-library-border">
					<ul>
    				{% for values in homework_list %}
        		<li>{{ values }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>